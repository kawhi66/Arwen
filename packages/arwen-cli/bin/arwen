#!/usr/bin/env node

const chalk = require('chalk')
const logo = require('../lib/logo')
const yargs = require('yargs')

yargs
    .command('$0', false, {}, function(argv) {
        console.log(logo)
        console.log(`   Arwen has some interesting abilities that could be used for`)
        console.log(`   project management of frontend. Typically, Arwen now could completely`)
        console.log(`   handle a vue project base on h_ui component library. Get started`)
        console.log(`   with a simple command ${chalk.green('arwen create h_ui-demo')}\n`)
        console.log(`   If you need more help, run ${chalk.green('arwen --help')}\n`)
    })
    .usage('Usage: arwen <command> [option]')
    .command(require('../scripts/create'))
    .example('$0 create h_ui-demo')
    .command(require('../scripts/serve'))
    .example('$0 serve -h 127.0.0.1 -p 8080')
    .command(require('../scripts/build'))
    .example('$0 build --pack --package-name h_ui-demo')
    .command(require('../scripts/deploy'))
    .example('$0 deploy ./build -p 8080')
    .detectLocale(false)
    .wrap(120)
    .help()
    .argv
