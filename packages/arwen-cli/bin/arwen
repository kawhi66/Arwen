#!/usr/bin/env node

const logo = require('../lib/logo')
const yargs = require('yargs')
const {
    chalk
} = require('@arwen/arwen-utils')

yargs
    .command('$0', false, {}, function(argv) {
        console.log(logo)
        console.log(
            `   Arwen has some interesting abilities that could be used for\n` +
            `   project management of frontend. Typically, arwen now could completely\n` +
            `   handle a vue project base on h_ui component library. Get started\n` +
            `   with a simple command ${chalk.green('arwen create h_ui-demo')}\n\n` +
            `   If you need more help, run ${chalk.green('arwen --help')}\n`
        )
    })
    .usage('Usage: arwen <command> [option]')
    .command(require('../scripts/create'))
    .example('$0 create h_ui-demo')
    .command(require('../scripts/serve'))
    .example('$0 serve -h 127.0.0.1 -p 8080')
    .command(require('../scripts/build'))
    .example('$0 build --pack --package-name h_ui-demo')
    .command(require('../scripts/deploy'))
    .example('$0 deploy ./build -p 8080')
    .detectLocale(false)
    .wrap(120)
    .help()
    .argv
